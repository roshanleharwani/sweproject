{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/api/users/route.js",
    "app/(user)/user/search/page.jsx",
    "app/(user)/user/orders/page.jsx",
    "app/api/signout/route.js",
    "app/(user)/user/wishlists/page.jsx",
    "app/(user)/user/home/page.jsx",
    "app/reset-password/[id]/page.jsx",
    "app/api/wishlist/route.js",
    "app/api/wishlist/route.js"
, "app/api/wishlist/[id]/route.js", "app/api/cart/[id]/route.js"  ],
  "exclude": ["node_modules"]
}
